@using Microsoft.AspNetCore.Identity
@using HospitalAppointmentBooking.Infrastructure.Identity

@page "/login"
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager Navigation

<h3>Login</h3>
<EditForm Model="@login" OnValidSubmit="@HandleLogin">
    <InputText @bind-Value="login.Email" placeholder="Email" />
    <InputText @bind-Value="login.Password" type="password" placeholder="Password" />
    <button type="submit">Login</button>
</EditForm>

<button @onclick="LoginWithGoogle">Login with Google</button>

@code {
    private LoginModel login = new();

    public class LoginModel
    {
        public string Email { get; set; }
        public string Password { get; set; }
    }

    private async Task HandleLogin()
    {
        var result = await SignInManager.PasswordSignInAsync(login.Email, login.Password, false, false);
        if (result.Succeeded)
        {
            Navigation.NavigateTo("/");
        }
    }

    private void LoginWithGoogle()
    {
        Navigation.NavigateTo("Identity/Account/ExternalLogin?provider=Google&returnUrl=/", true);
    }
}
